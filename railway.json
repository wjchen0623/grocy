{
	"$schema": "https://railway.app/railway.schema.json",
	"build": {
		"builder": "dockerfile"
	},
	"deploy": {
		"healthcheckPath": "/api/system/db-changed-time",
		"healthcheckTimeout": 100,
		"restartPolicyType": "always"
	},
	"volumes": [
		{
			"name": "grocy-data",
			"mountPath": "/var/www/html/data"
		}
	]
}